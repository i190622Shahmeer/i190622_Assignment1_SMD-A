<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010200"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="42dp"
            android:layout_marginStart="80dp"
            android:text="Upload Music"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="42dp"
            android:layout_marginStart="325dp"
            android:text="Next"
            android:textColor="#D7C50E"
            android:textSize="25sp" />


        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/addplaylist"
            app:tint="#44390E" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginVertical="180dp"
            android:layout_marginStart="175dp"
            android:src="@drawable/ic_baseline_cloud_upload_24"
            app:tint="#D7C50E" />


        <EditText
            android:id="@+id/editTextTextTitle"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="340dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="  Title"
            android:textColor="#D0C235"
            tools:ignore="DuplicateIds" />

        <EditText
            android:id="@+id/editTextTextGenre"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="410dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="  Genre"
            android:textColor="#D0C235"
            tools:ignore="DuplicateIds" />


        <EditText
            android:id="@+id/editTextTextDes"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="485dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="  Description"
            android:textColor="#D0C235" />

        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_marginVertical="590dp"
            android:layout_marginStart="50dp"
            android:backgroundTint="#D7C50E"
            android:text="Upload" />


        <Button
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_marginVertical="590dp"
            android:layout_marginStart="250dp"
            android:backgroundTint="@color/black"
            android:text="Record" />










        <ImageView
            android:src="@drawable/bottombar"
            android:layout_marginVertical="660dp"
            android:paddingBottom="10dp"
            android:layout_width="5000dp"
            android:layout_height="100dp"/>

        <ImageView
            android:src="@drawable/ic_baseline_thumb_up_24"
            android:layout_marginVertical="675dp"
            android:layout_marginStart="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_add_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="130dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="245dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_access_time_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="342dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#CAA919" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="27dp"
            android:text="Liked"
            android:textColor="#CAA919"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="137dp"
            android:text="Add"
            android:textColor="#CAA919"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="245dp"
            android:text="Search"
            android:textColor="#CAA919"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="320dp"
            android:text="ListenLater"
            android:textColor="#CAA919"
            android:textSize="15sp" />


    </RelativeLayout>
</LinearLayout>


