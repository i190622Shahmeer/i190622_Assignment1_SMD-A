<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010200"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="42dp"
            android:layout_marginStart="15dp"
            android:text="Skip"
            android:textColor="#D7C50E"
            android:textSize="25sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="37dp"
            android:layout_marginStart="90dp"
            android:text="Select Playlist"
            android:textColor="@color/white"
            android:textSize="35sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="42dp"
            android:layout_marginStart="325dp"
            android:text="Next"
            android:textColor="#D7C50E"
            android:textSize="25sp" />


        <ImageView
            android:layout_width="140dp"
            android:layout_height="190dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="300dp"
            android:src="@drawable/selectplaylist"
            app:tint="#CAA919" />


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="530dp"
            android:src="@drawable/circle"
            app:tint="#CAA919" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="325dp"
            android:layout_marginTop="540dp"
            android:src="@drawable/ic_baseline_add_24"
            app:tint="@color/white" />

        <ImageView
            android:src="@drawable/bottombar"
            android:layout_marginVertical="660dp"
            android:paddingBottom="10dp"
            android:layout_width="5000dp"
            android:layout_height="100dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="675dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_baseline_thumb_up_24"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_add_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="130dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="245dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_access_time_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="342dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#CAA919" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="27dp"
            android:text="Liked"
            android:textColor="#CAA919"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="137dp"
            android:text="Add"
            android:textColor="#CAA919"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="245dp"
            android:text="Search"
            android:textColor="#CAA919"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="320dp"
            android:text="ListenLater"
            android:textColor="#CAA919"
            android:textSize="15sp" />





    </RelativeLayout>
</LinearLayout>


