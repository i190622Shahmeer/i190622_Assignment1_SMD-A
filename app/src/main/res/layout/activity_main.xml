<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010200"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginStart="80dp"
            android:text="Song Title"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="100dp"
            android:layout_marginStart="30dp"
            android:text="By Artist"
            android:textColor="#CAA919"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="220dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:tint="#CAA919" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginVertical="215dp"
            android:layout_marginStart="80dp"
            android:src="@drawable/commentbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginVertical="230dp"
            android:text="What an amazing song"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginVertical="550dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/commentbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginVertical="565dp"
            android:text="Post a comment"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginVertical="550dp"
            android:layout_marginStart="330dp"
            android:src="@drawable/circle"
            android:tint="#44390E" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginVertical="555dp"
            android:layout_marginStart="335dp"
            android:src="@drawable/ic_baseline_play_arrow_24"
            app:tint="#CAA919" />


        <ImageView
            android:src="@drawable/bottombar"
            android:layout_marginVertical="660dp"
            android:paddingBottom="10dp"
            android:layout_width="5000dp"
            android:layout_height="100dp"/>

        <ImageView
            android:src="@drawable/ic_baseline_thumb_up_24"
            android:layout_marginVertical="675dp"
            android:layout_marginStart="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_add_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="130dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="245dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#CAA919" />

        <ImageView
            android:src="@drawable/ic_baseline_access_time_24"
            android:layout_marginVertical="670dp"
            android:layout_marginStart="342dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#CAA919" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="27dp"
            android:text="Liked"
            android:textColor="#CAA919"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="137dp"
            android:text="Add"
            android:textColor="#CAA919"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="245dp"
            android:text="Search"
            android:textColor="#CAA919"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="700dp"
            android:layout_marginStart="320dp"
            android:text="ListenLater"
            android:textColor="#CAA919"
            android:textSize="15sp" />







    </RelativeLayout>
</LinearLayout>


