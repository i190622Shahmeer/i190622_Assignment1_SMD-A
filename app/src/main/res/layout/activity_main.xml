<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010200"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_marginTop="75dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/logoicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginHorizontal="35dp"
            android:text="Mustify"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginVertical="50dp"
            android:text="Sign in"
            android:textSize="25dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginVertical="300dp"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="@color/white"
            android:textColor="#D0C235"
            android:inputType="textPersonName"
            android:text="   Name" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="380dp"
            android:textColor="#D0C235"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="   Email"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="350dp"
            android:textColor="#D0C235"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="460dp"
            android:text="   Password"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:textColor="#D0C235"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="525dp"
            android:layout_marginLeft="30dp"
            android:text="Gender"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="565dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/m1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="565dp"
            android:layout_marginLeft="180dp"
            android:src="@drawable/f1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="565dp"
            android:layout_marginLeft="270dp"
            android:src="@drawable/u1"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_marginVertical="625dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            android:text="I would like to recieve your newsletter and other promotional information." />

        <Button
            android:id="@+id/button"
            android:layout_marginVertical="670dp"
            android:layout_marginLeft="35dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#D7C50E"
            android:text="Sign Up" />


    </RelativeLayout>

</LinearLayout>


